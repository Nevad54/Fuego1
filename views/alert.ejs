<main>
    <div>
        <details>
            <summary>Triggered Alarm History</summary>
            <div class="data-table-container">
                <table id="timeTable" class="data-table">
                    <thead>
                        <tr>
                            <th>FDAS</th>
                            <th>Timestamp</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data for 'conventional' will be displayed here -->
                    </tbody>
                </table>
