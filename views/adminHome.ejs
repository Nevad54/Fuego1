        <script>
            
            function associateFDAS() {
    // Extract selected user and FDAS IDs
    const userId = document.getElementById('user').value;
    const fdasId = document.getElementById('fdas').value;

    // Make an AJAX request or use Fetch API to send the association data
            fetch('https://fuego1.onrender.com/associateFDAS', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ userId, fdasId }),
            })
            .then(response => response.json())
            .then(data => {
                // Handle the response, update UI or show a confirmation message
                console.log(data);
            })
            .catch(error => {
                console.error('Error:', error);
            });
             }

            const socket = io.connect('https://fuego1.onrender.com');
            console.log('Connecting to Socket.IO');

            socket.on('connect', () => {
            console.log('Connected to Socket.IO');
            });

            socket.on('mqttMessage', (payload) => {
                console.log('Received mqttMessage:', payload);
                // Update values based on the received MQTT message
                if (payload.topic === 'Temp') {
                    document.getElementById('Temperature').innerHTML = `Temperature: ${payload.message}`;
                } else if (payload.topic === 'Humid') {
                    document.getElementById('Humidity').innerHTML = `Humidity: ${payload.message}`;
                } else if (payload.topic === 'esp32/test') {
                    document.getElementById('mqtt').innerHTML = `System: ${payload.message}`;
                } else if (payload.topic === 'Smoke') {
                    document.getElementById('Smoke').innerHTML = `Smoke: ${payload.message}`;
                } else if (payload.topic === 'Fire') {
                    // Show the 'fire' element when 'Fire' payload is received
                    document.getElementById('fire').innerHTML = `<span style="color: red; font-size: larger;">${payload.message}</span>`;
                    // Show the 'fire' icon when 'Fire' payload is received
                    document.getElementById('fire-icon').style.display = 'inline'; // or 'block', depending on its original display property
                }
            });
            

             // Function to toggle dark mode
                function toggleDarkMode() {
                    const body = document.body;
                    body.classList.toggle('dark-mode');

                    // Update dark mode button icon
                    const darkModeIcons = document.querySelectorAll('.dark-mode span.material-icons-sharp');
                    darkModeIcons.forEach(icon => icon.classList.toggle('active'));
                }

                // Event listener for dark mode button click
                document.querySelector('.dark-mode').addEventListener('click', toggleDarkMode);
          </script>
