            function associateFDAS() {
    // Extract selected user and FDAS IDs
    const userId = document.getElementById('user').value;
    const fdasId = document.getElementById('fdas').value;

    // Make an AJAX request or use Fetch API to send the association data
            fetch('https://fuego1.onrender.com/associateFDAS', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ userId, fdasId }),
            })
            .then(response => response.json())
            .then(data => {
                // Handle the response, update UI or show a confirmation message
                console.log(data);
            })
            .catch(error => {
                console.error('Error:', error);
            });
             }

            const socket = io.connect('https://fuego1.onrender.com');
            console.log('Connecting to Socket.IO');

            socket.on('connect', () => {
            console.log('Connected to Socket.IO');
            });

            socket.on('mqttMessage', (payload) => {
                console.log('Received mqttMessage:', payload);
                
                // Update values based on the received MQTT message
                const index = parseInt(payload.topic.substr(-1)); // Extract the index from the topic
                if (!isNaN(index)) {
                    const dataType = payload.topic.substring(0, payload.topic.length - 1); // Extract the data type (e.g., Temp, Humid, Smoke)
                    const element = document.getElementById(`${dataType}${index}`);
                    if (element) {
                        // Concatenate the label with the received value
                        const label = dataType === 'Temperature' ? 'Temp: ' : dataType === 'Humid' ? 'Humidity: ' : 'Smoke: ';
                        element.innerHTML = label + payload.message;
                    } else {
                        console.error(`Element ${dataType}${index} not found.`);
                    }
                }
        
                // Handle fire alert dynamic
        if (payload.topic.startsWith('Fire')) {
            const fireElement = document.getElementById('fire-data');
            if (fireElement) {
                // Show the fire alert message
                fireElement.style.display = 'block';
                // Update the message content
                document.getElementById('fire-content').innerHTML = `<span style="color: red; font-size: larger;">${payload.message}</span>`;
            } else {
                console.error('Fire element not found.');
            }
        }
    });
        


